<%- include('partials/head') %>

<div class="container">
    <h1>Your random number is... <%= num %></h1>
    <% if(num %2 === 0) { %>
        <h2>That is an even number</h2>
    <% } else { %>
        <h2>That's an odd number</h2>
    <% } %>

    <button type="button" id="resetMe" class="btn btn-dark">Get New Number</button>
</div>

<script>
    document.getElementById("resetMe").addEventListener('click', ()=> {
        location.reload();
    })
</script>
